<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="fas fa-map-pin"></i>
            <%= @location[:date] %>
        </h2>
        <h1><%= @location[:title] %></h1>
        <p><%= @location[:description] %></p>

        <% for review in @reviews %>
            <div class="media">
                <% if review[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0">
                        <%= @users_table.where(id: review[:user_id]).to_a[0][:name] %>

                        <small>
                        <% if @current_user && @current_user[:id] == review [:user_id] %>
                         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>   
                        (<a href="/reviews/<%= review[:id] %>/edit">edit</a> | <a href="/reviews/<%= review[:id] %>/destroy">delete</a>)
                        <% end %>
                        </small>
                       
                    </h5>
                    <%= review[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <% if @current_user %>
                <a href="/locations/<%= @location[:id] %>/reviews/new" class="btn btn-primary">Leave a review now!</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to leave a review</a>
            <% end %>
        </p>
    </div>
    </p>  
      <iframe
        width="600"
        height="450"
        frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw
          &q=<%= @lat %>,<%= @long %>&zoom=6" allowfullscreen>
      </iframe>

    <div class="col-sm-3">
        <h3>When?</h3>
        <p><%= @location[:average_rating] %></p>
        <h3>Where?</h3>
        <p><%= @location[:location] %></p>
        <h3>How many guests so far?</h3>
        <p><%= @going_count %></p>
    </div>
</div>